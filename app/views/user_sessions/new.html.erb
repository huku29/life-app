<div class="w-full min-h-screen bg-gray-50 flex flex-col sm:justify-center items-center pt-6 sm:pt-0" style="background-image: url(<%= asset_path('bg-top.jpg') %>)">
  <div class="w-full sm:max-w-md mb-40" >
  <h2 class="mb-12 text-center text-5xl font-extrabold">ログイン</h2>
  <%= form_with url: login_path, local: true do |f| %>
    <div class="form-group mb-4 ">
      <%= f.label :email, User.human_attribute_name(:email), class:"block mb-1" %> 
      <%= f.text_field :email, class:"py-2 px-3 border border-gray-300 focus:border-red-300 focus:outline-none focus:ring focus:ring-red-200 focus:ring-opacity-50 rounded-md shadow-sm disabled:bg-gray-100 mt-1 block w-full" %>
    </div>
    <div class="form-group mb-4">
      <%= f.label :password, User.human_attribute_name(:password), class:"block mb-1" %>
      <%= f.password_field :password, class:"py-2 px-3 border border-gray-300 focus:border-red-300 focus:outline-none focus:ring focus:ring-red-200 focus:ring-opacity-50 rounded-md shadow-sm disabled:bg-gray-100 mt-1 block w-full"%>
    </div>
    <div class="action mt-6">
      <%= f.submit 'ログイン', class: "w-full inline-flex items-center justify-center px-4 py-2 bg-yellow-500 border border-transparent rounded-md font-semibold capitalize text-white hover:bg-yellow-400 active:bg-red-700 focus:outline-none focus:border-red-700 focus:ring focus:ring-red-200 disabled:opacity-25 transition cursor-pointer" %>
    </div>
  <% end %>
    <div class="mt-6 text-center">
      <%= link_to '未登録の方はこちら',new_user_path %>
    </div>
  </div>
</div>
